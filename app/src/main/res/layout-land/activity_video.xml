<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:rotation="270"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/videolinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:background="@android:color/darker_gray"
                    android:id="@+id/btn_right"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:src="@drawable/ic_right2" />

                <ImageView
                    android:background="@android:color/darker_gray"
                    android:id="@+id/btn_left"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@drawable/ic_left2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/videotool"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn_chooseVideo"
                    android:background="@android:color/darker_gray"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_videofolder2" />

                <ImageView
                    android:id="@+id/btn_cut"
                    android:background="@android:color/darker_gray"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_cut2" />

                <ImageView
                    android:id="@+id/btn_mux"
                    android:background="@android:color/darker_gray"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_mux2" />

                <ImageView
                    android:id="@+id/btn_split"
                    android:background="@android:color/darker_gray"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_splt" />

                <ImageView
                    android:id="@+id/btn_recordVideo"
                    android:background="@android:color/darker_gray"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_video2" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
